<<widget "bedclotheson">>
	<<if $args[0] is undefined>>
		<<set _store to "bed">>
	<<else>>
		<<set _store to $args[0]>>
	<</if>>
	<<set $wardrobe_location to "wardrobe">>
	<<if $wear_outfit is "clotheson">>
		<<undress "wardrobe">>
		<<storeon _store>>
	<<elseif $wear_outfit isnot "none">>
		<<storeon _store>>
		<<undress "wardrobe">>
		<<wearoutfit>>
	<</if>>
