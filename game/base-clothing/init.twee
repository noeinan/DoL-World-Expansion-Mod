<<widget "clothing_data">>
<<set setup.clothes to {}>>
<<init_over_upper>>
<<init_over_lower>>
<<init_upper>>
<<init_lower>>
<<init_under_upper>>
<<init_under_lower>>
<<init_genitals>>
<<init_over_head>>
<<init_head>>
<<init_face>>
<<init_neck>>
<<init_hands>>
<<init_legs>>
<<init_feet>>
<<set setup.clothes_all_slots to ["over_upper", "over_lower", "upper", "lower", "under_upper", "under_lower","over_head", "head", "face", "neck", "hands", "legs", "feet", "genitals"]>>

<!-- Re-assign clothes IDs (indices) automatically to avoid accidentally giving multiple clothes the same ID manually
	due to copypaste error (cue moon & star pj pants). Normally, this doesn't modify anything, just a failsafe -->
<<run Object.keys(setup.clothes).forEach(slot => setup.clothes[slot].forEach((item, i) => item.index = i))>>

<!-- Find all unique traits (types) clothes can have -->
<<set $clothingTraits = [...new Set(Object.keys(setup.clothes).flatMap(x => setup.clothes[x]).flatMap(x => x.type))]>>

<</widget>>

